@page
@model CartModel


<div class="cart-container">
    <h2>Your Shopping Cart</h2>

    @if (Model.Cart?.Lines.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantity</th>
                    <th>Item</th>
                    <th class="text-right">Price</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.Cart?.Lines ?? Enumerable.Empty<CartLine>())
                {
                    <tr>
                        <td class="text-center" data-label="Quantity">@line.Quantity</td>
                        <td class="text-left product-name" data-label="Product">@line.Product.Name</td>
                        <td class="text-right" data-label="Price">@line.Product.Price.ToString("c")</td>
                        <td class="text-right" data-label="Subtotal">
                            @((line.Quantity * line.Product.Price).ToString("c"))
                        </td>
                        <td class="text-center" data-label="Action">
                            <form asp-page-handler="Remove" method="post">
                                <input type="hidden" name="ProductID" value="@line.Product.ProductID" />
                                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        @Model.Cart?.ComputeTotalValue().ToString("c")
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div class="action-buttons">
            <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
            <a class="btn btn-outline-primary" href="/Order/Checkout">
                Checkout
            </a>
        </div>
    }
    else
    {
        <div class="empty-cart">
            <p>Your cart is empty.</p>
            <a class="btn btn-primary" href="@Model.ReturnUrl">Start Shopping</a>
        </div>
    }
</div>

<style>
    /* Modern Shopping Cart Styling with Black Theme */

    /* Base styles and fonts */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f8f8;
        color: #333;
    }

    /* Cart container */
    .cart-container {
        max-width: 95%;
        margin: 30px auto;
        padding: 25px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    /* Cart header */
    h2 {
        color: #000;
        font-size: 28px;
        margin-bottom: 25px;
        text-align: center;
        font-weight: 600;
        border-bottom: 2px solid #000;
        padding-bottom: 12px;
    }

    /* Table styling */
    .table {
        width: 100%;
        margin-bottom: 30px;
        border-collapse: collapse;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

        .table thead {
            background-color: #000;
            color: #fff;
        }

        .table th {
            padding: 15px;
            font-weight: 500;
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: none;
        }

        .table tbody tr {
            transition: background-color 0.2s;
        }

            .table tbody tr:hover {
                background-color: #f5f5f5;
            }

        .table td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid #eee;
        }

        /* Product name styling */
        .table .product-name {
            font-weight: 500;
            color: #000;
        }

        /* Price styling */
        .table .text-right {
            font-weight: 500;
        }

        /* Footer styling */
        .table tfoot {
            background-color: #f8f8f8;
        }

            .table tfoot tr td {
                padding: 18px 15px;
                font-weight: 600;
                border-top: 2px solid #000;
                border-bottom: none;
            }

            .table tfoot td:last-child {
                font-size: 18px;
                color: #000;
            }

    /* Remove button styling */
    .btn-danger {
        background-color: #000;
        border: 1px solid #000;
        color: #fff;
        padding: 8px 15px;
        font-size: 14px;
        border-radius: 4px;
        transition: all 0.3s;
    }

        .btn-danger:hover {
            background-color: #333;
            border-color: #333;
            transform: translateY(-2px);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

    /* Action buttons container */
    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 25px;
    }

    /* Continue shopping button */
    .btn-primary {
        background-color: #000;
        border: none;
        color: #fff;
        padding: 12px 25px;
        font-size: 16px;
        border-radius: 4px;
        transition: all 0.3s;
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #333;
            transform: translateY(-2px);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

    /* Checkout button */
    .btn-outline-primary {
        background-color: transparent;
        border: 2px solid #000;
        color: #000;
        padding: 12px 25px;
        font-size: 16px;
        border-radius: 4px;
        transition: all 0.3s;
        font-weight: 500;
    }

        .btn-outline-primary:hover {
            background-color: #000;
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

    /* Empty cart message */
    .empty-cart {
        text-align: center;
        padding: 30px;
        color: #888;
    }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .table thead

    {
        display: none;
    }

    .table, .table tbody, .table tr, .table td {
        display: block;
        width: 100%;
    }

        .table tr {
            margin-bottom: 15px;
            border-bottom: 2px solid #eee;
        }

        .table td {
            display: flex;
            justify-content: space-between;
            text-align: right;
            padding: 10px 15px;
            border-bottom: 1px solid #f2f2f2;
        }

            .table td::before {
                content: attr(data-label);
                font-weight: 600;
                text-align: left;
            }

    .action-buttons {
        flex-direction: column;
    }

    .btn {
        width: 100%;
        margin-bottom: 10px;
    }

    }
</style>